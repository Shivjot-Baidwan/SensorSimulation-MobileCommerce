<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilecommerce.sensorsimulation.WalkingScreenFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:id="@+id/stillScreenTextView"
        android:text="@string/still_screen_message"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="177dp"
        android:layout_height="248dp"
        android:id="@+id/stillImageView"
        android:src="@drawable/stillimage"
        android:layout_gravity="center|bottom"/>

</FrameLayout>
