<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_still"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilecommerce.sensorsimulation.StillActivity">
<!--android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:id="@+id/stillScreenTextView"
        android:text="@string/still_screen_message"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />


    <ImageView
        android:layout_width="177dp"
        android:layout_height="248dp"
        android:id="@+id/stillImageView"
        android:src="@drawable/stillimage"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/playButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_marginLeft="18dp"
        android:id="@+id/playButton"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_pause"
        android:layout_marginLeft="24dp"
        android:id="@+id/pauseButton"
        android:layout_alignTop="@+id/playButton"
        android:layout_toEndOf="@+id/playButton"
        android:layout_marginStart="11dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginLeft="19dp"
        android:id="@+id/stopButton"
        android:layout_alignTop="@+id/pauseButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_previous"
        android:id="@+id/previousSongButton"
        android:layout_alignTop="@+id/stopButton"
        android:layout_toEndOf="@+id/stopButton"
        android:layout_marginStart="18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_next"
        android:id="@+id/nextSongButton"
        android:layout_alignTop="@+id/previousSongButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

</RelativeLayout>
